<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragments_activities_background_color"
    android:focusableInTouchMode="true">

    <View
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@drawable/round_bottom"
        android:orientation="vertical" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_medium">

            <android.support.v7.widget.CardView
                android:id="@+id/card_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_big"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/card_login_radius"
                app:cardElevation="@dimen/card_login_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding_medium"
                    android:paddingTop="@dimen/padding_login_big"
                    android:paddingEnd="@dimen/padding_medium"
                    android:paddingBottom="@dimen/padding_login_big">

                    <TextView
                        android:id="@+id/signup_errors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_medium"
                        android:text="Errors"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/college_roll_number_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/college_roll_number_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/college_roll_number"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/first_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/first_name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/first_name"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/last_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/last_name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/last_name"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/email_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/contact_no_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/contact_no_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/contact_no"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/fb_profile_link_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/fb_profile_link_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/fb_profile_link"
                            android:inputType="textUri"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/linkedin_profile_link_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/linkedin_profile_link_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/linkedin_profile_link"
                            android:inputType="textUri"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/password_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/password_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/confirm_password_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/confirm_password_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/confirm_password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/dob_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/dob_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:ems="10"
                            android:focusable="false"
                            android:hint="@string/dob"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_graduation_year"
                        style="@style/SignUpSpinner" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_degree"
                        style="@style/SignUpSpinner" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_department"
                        style="@style/SignUpSpinner" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_employment_type"
                        style="@style/SignUpSpinner" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/present_employer_educational_inst_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/present_employer_educational_inst_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/present_employer_educational_inst"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/designation_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/designation_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/designation"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/address_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/address_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/address"
                            android:inputType="textPostalAddress"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <ProgressBar
                        android:id="@+id/signup_progress"
                        android:layout_width="100dp"
                        android:layout_height="100sp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/country_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/country_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/country"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/state_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/state_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/state"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/city_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/city_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/city"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/achievements_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/achievements_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/achievements"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/signup_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_30dp"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:background="@drawable/round_button"
                        android:text="@string/sign_up"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textsize_medium" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
