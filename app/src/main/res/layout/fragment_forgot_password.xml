<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragments_activities_background_color"
    tools:context=".ChangeCredentials.ChangeEmailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_medium">

            <View
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@drawable/round_bottom"
                android:orientation="vertical" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/margin_big"
                android:layout_marginTop="@dimen/change_email_margin"
                android:layout_marginEnd="@dimen/margin_big"
                android:layout_marginBottom="@dimen/change_email_margin"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_login_big">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/lock_icon_size"
                        android:layout_height="@dimen/lock_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_big"
                        android:layout_marginBottom="@dimen/margin_30dp"
                        android:src="@drawable/ic_lock_black_24dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/forgot_password"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_big" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_big"
                        android:text="@string/forgot_password_details"
                        android:textAlignment="center" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/emailForgotPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/email_text_forgot_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/rollForgotPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/roll_text_forgot_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/college_roll_number"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_medium"
                            android:textColorHint="@android:color/black" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/forgot_password_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_30dp"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_big"
                        android:background="@drawable/round_button"
                        android:padding="@dimen/padding_big"
                        android:text="@string/reset_password"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textsize_medium" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>