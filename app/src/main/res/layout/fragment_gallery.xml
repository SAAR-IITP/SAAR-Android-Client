<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragments_activities_background_color"
    android:orientation="vertical"
    tools:context=".Gallery.GalleryFragment">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/no_internet_text_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_internet"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_big"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view_gallery"
        tools:listitem="@layout/gallery_list_row" />

</LinearLayout>